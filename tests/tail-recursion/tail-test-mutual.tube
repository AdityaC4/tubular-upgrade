// Test mutual recursion optimization
// This should test the new mutual recursion features

function is_even(n: int): int {
    if (n == 0) {
        return 1;
    } else {
        return is_odd(n - 1);
    }
}

function is_odd(n: int): int {
    if (n == 0) {
        return 0;
    } else {
        return is_even(n - 1);
    }
}

function main(): int {
    local result1: int;
    local result2: int;
    
    result1 = is_even(8);
    result2 = is_odd(7);
    
    return result1 + result2;
}


